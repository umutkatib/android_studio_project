<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_about">

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.my_application.ui.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.my_application.ui.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_add_photo"
        android:name="com.example.my_application.ui.AddPhotoFragment"
        android:label="Add Photo"
        tools:layout="@layout/fragment_gallery" />
    <fragment
        android:id="@+id/nav_add_label"
        android:name="com.example.my_application.ui.AddLabelFragment"
        android:label="Add Label"
        tools:layout="@layout/fragment_nav_add_label" />
